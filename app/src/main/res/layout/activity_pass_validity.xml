<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/backcolor"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Pass_Validity_Home_Btn"
        android:layout_width="131dp"
        android:layout_height="51dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/textboxborder"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="Home"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/Pass_Validity_Bus_No"
        app:layout_constraintTop_toBottomOf="@+id/Pass_Validity_Bus_No"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Pass_Validity_Renew_Btn"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:background="@drawable/textboxborder"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:text="Renew"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Pass_Validity_Home_Btn"
        app:layout_constraintEnd_toEndOf="@+id/Pass_Validity_Bus_No"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/Pass_Validity_Home_Btn"
        app:layout_constraintTop_toBottomOf="@+id/Pass_Validity_Bus_No"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/Pass_Validity_Back_Btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"

        android:background="@drawable/back"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Bus Nexus Text-->



    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/robot900"
        android:text="Bus Nexus"
        android:textAlignment="center"

        android:textColor="#FA4437"
        android:textSize="39dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!--    Registration Text-->


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="Pass Validity"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Name :"
        android:textColor="@color/black"

        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/Login_ID_NO"
        app:layout_constraintEnd_toEndOf="@+id/Login_ID_NO"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Login_ID_NO"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Valid from :"

        android:textColor="@color/black"

        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/Pass_Validity_from"
        app:layout_constraintEnd_toEndOf="@+id/Pass_Validity_from"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Pass_Validity_from"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/Pass_Validity_from"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/textboxborder"
        android:hint="Valid from"
        android:inputType="number"

        android:paddingLeft="19dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"

        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Login_ID_NO"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/Login_ID_NO"
        app:layout_constraintTop_toBottomOf="@+id/Login_ID_NO"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Login_ID_NO"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/textboxborder"
        android:hint="Student Name Display"
        android:inputType="number"
        android:paddingLeft="19dp"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Valid to :"

        android:textColor="@color/black"

        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/Pass_Validity_until"
        app:layout_constraintEnd_toEndOf="@+id/Pass_Validity_until"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Pass_Validity_until"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Pass_Validity_until"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/textboxborder"
        android:hint="Valid Until"
        android:inputType="number"

        android:paddingLeft="19dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Pass_Validity_from"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Pass_Validity_from"
        app:layout_constraintTop_toBottomOf="@+id/Pass_Validity_from"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Route :"

        android:textColor="@color/black"

        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/Pass_Validity_route"
        app:layout_constraintEnd_toEndOf="@+id/Pass_Validity_route"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Pass_Validity_route"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Pass_Validity_route"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/textboxborder"
        android:hint="Route Display"
        android:inputType="number"
        android:paddingLeft="19dp"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Pass_Validity_until"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Pass_Validity_until"
        app:layout_constraintTop_toBottomOf="@+id/Pass_Validity_until" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Bus No. :"

        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/Pass_Validity_Bus_No"
        app:layout_constraintEnd_toEndOf="@+id/Pass_Validity_Bus_No"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Pass_Validity_Bus_No"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Pass_Validity_Bus_No"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/textboxborder"
        android:hint="Bus Number Display"
        android:inputType="number"
        android:paddingLeft="19dp"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Pass_Validity_route"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Pass_Validity_route"
        app:layout_constraintTop_toBottomOf="@+id/Pass_Validity_route" />
</androidx.constraintlayout.widget.ConstraintLayout>